                <Label Tag="6" Name="digiOutLbl6" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="6" Grid.Row="2">6</Label>
                <Label Tag="7" Name="digiOutLbl7" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="7" Grid.Row="2">7</Label>
                <Label Tag="8" Name="digiOutLbl8" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="8" Grid.Row="2">8</Label>
