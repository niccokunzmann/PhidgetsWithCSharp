                <Label Tag="1" Name="digiOutLbl1" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1" Grid.Row="2">1</Label>
                <Label Tag="2" Name="digiOutLbl2" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="2" Grid.Row="2">2</Label>
